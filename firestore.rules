rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras mais específicas para cada coleção
    
    // Qualquer utilizador autenticado pode ler a lista de pontos de táxi
    match /stands/{standId} {
      allow read: if request.auth != null;
      // Apenas administradores (a serem definidos) poderiam escrever
      allow write: if false; 
    }

    // Os utilizadores podem ler/escrever nos seus próprios perfis
    match /passengers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /drivers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    match /fleet-managers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Regra de negação padrão para segurança
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
