rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /passengers/{userId} {
      allow create: if request.auth != null && request.resource.data.id == request.auth.uid;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /drivers/{userId} {
       allow create: if request.auth != null && request.resource.data.id == request.auth.uid;
       allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /fleet-managers/{userId} {
       allow create: if request.auth != null && request.resource.data.id == request.auth.uid;
       allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /stands/{standId} {
      allow read, write: if request.auth != null;
    }

    match /rideRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid);
    }
    
    match /messages/{messageId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
                  (get(/databases/$(database)/documents/rideRequests/$(resource.data.rideId)).data.passengerId == request.auth.uid ||
                   get(/databases/$(database)/documents/rideRequests/$(resource.data.rideId)).data.driverId == request.auth.uid);
    }

    match /vehicles/{vehicleId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
    }

    match /transactions/{transactionId} {
        allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
