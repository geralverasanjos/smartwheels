rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura pública de todos os ficheiros
    match /{allPaths=**} {
      allow read;
    }

    // Permite escrita apenas para utilizadores autenticados
    // Esta é a regra principal para permitir uploads
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
