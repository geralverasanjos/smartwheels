rules_version = '2';

// Regras de Segurança do Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Permite a leitura de todos os ficheiros por qualquer utilizador (útil para imagens de perfil, etc.)
    match /{allPaths=**} {
      allow read;
    }

    // Permite a escrita (upload) de ficheiros apenas para utilizadores autenticados
    // e apenas na sua própria pasta de utilizador.
    match /profilePhotos/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /documents/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
