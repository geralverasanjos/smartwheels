rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for anyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own directory inside profile-photos
    // The {userId} wildcard in the path will be matched against the authenticated user's ID.
    match /profile-photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
