rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for anyone
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own profile-photos directory.
    // The path contains the user's ID, which we can check against their auth token.
    match /profile-photos/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
